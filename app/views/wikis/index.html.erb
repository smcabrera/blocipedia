  <% if @public_wikis %>
    <ul>
    <% @public_wikis.each do |wiki| %>
      <li>
        <%= link_to wiki.title, wiki_path(wiki) %>
        <%= link_to 'edit', edit_wiki_path(wiki) %>
        <%= link_to 'delete', wiki, method: :delete, data:
          { confirm: 'Are you sure you want to delete this topic?' } %>
      </li>
    <% end %>
    </ul>
  <% else %>
   There are no wikis yet. Be the first to create one!
<% end %>

<% if current_user %>
  <%= link_to 'Create wiki', new_wiki_path %>
<% end %>
