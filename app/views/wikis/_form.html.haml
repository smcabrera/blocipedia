= form_for wiki do |f|

  .form-group
    = f.label :title
    = f.text_field :title, class: "form-control", placeholder: "Wiki title"

  .from-group
    = f.label :body
    = f.text_area :body, class: "form-control", placeholder: "Wiki body"

  %br

  - if
    .form-group
      = f.check_box :private, checked_value: "true", unchecked_value: "false"
      = f.label :private

  .form-group
    = f.submit "Save", class: 'btn btn-success'

