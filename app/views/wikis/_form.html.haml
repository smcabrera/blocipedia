.row
  .col-md-8
    = form_for wiki do |f|
      .form-group
        = f.label :title
        = f.text_field :title, class: "form-control", placeholder: "Wiki title"

      .from-group
        = f.label :body
        = f.text_area :body, class: "form-control", placeholder: "Wiki body"

      %br

      - if current_user.role == "admin" || current_user.role == "premium"
        .form-group
          = f.check_box :private, checked_value: "true", unchecked_value: "false"
          = f.label :private

      .form-group
        = f.submit "Save", class: 'btn btn-success'

  .col-md-4
    %h4 Collaborators:
    %ul
      - @wiki.collaborators.each do |c|
        %li
          - if c == current_user
            = "You"
          - else
            = c.name

  = form_for Collaboration.new(:wiki_id => @wiki.id) do |f|
    .form-group
      = f.label :add_collaborator, class: 'sr-only'
      = f.check_box :wiki_id, checked_value: "1", unchecked_value: "0"
      -#= f.collection_select(:user_id, User.all, :id, :name, class: 'form-control')
    .form-group
      = f.submit "Add Collaborator", class: 'btn btn-default btn-sm'

