<h1>Edit wiki</h1>

<%= form_for @wiki do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: "Wiki title" %>
  </div>

  <div class="from-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control", placeholder: "Wiki body" %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>

<% end %>
